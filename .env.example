# Freqtrade Multi-Bot System Environment Configuration
# Copy this file to .env and fill in your actual values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://username:password@localhost:5432/freqtrade_db
# For development, you can use SQLite:
# DATABASE_URL=sqlite:///./freqtrade.db

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===========================================
# JWT AUTHENTICATION
# ===========================================
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ===========================================
# SERVICE CONFIGURATION
# ===========================================
# Management Server
HOST=0.0.0.0
PORT=8002
ENVIRONMENT=development
DEBUG=true

# Trading Gateway
TRADING_GATEWAY_URL=http://localhost:8001

# Backtesting Server
BACKTESTING_SERVER_URL=http://localhost:8003

# FreqAI Server
FREQAI_SERVER_URL=http://localhost:8004

# ===========================================
# CORS SETTINGS
# ===========================================
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173

# ===========================================
# EXTERNAL API KEYS (Optional)
# ===========================================
# CoinGecko API (for market data)
COINGECKO_API_KEY=your-coingecko-api-key

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=text

# ===========================================
# MONITORING (Optional)
# ===========================================
# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana (if using external instance)
GRAFANA_URL=http://localhost:3000

# ===========================================
# SECURITY SETTINGS
# ===========================================
# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Session settings
SESSION_TIMEOUT_MINUTES=60

# ===========================================
# BACKUP SETTINGS (Optional)
# ===========================================
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# ===========================================
# NOTIFICATIONS (Optional)
# ===========================================
# Email notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Telegram notifications
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id